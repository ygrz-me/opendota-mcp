{
  "name": "opendota-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for OpenDota API queries with natural language support",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "docker:build": "docker build -t opendota-mcp-server .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "security:scan": "./scripts/security-scan.sh",
    "sbom:generate": "./scripts/generate-sbom.sh",
    "quality:all": "npm run test:coverage && npm run security:scan && npm run sbom:generate"
  },
  "keywords": [
    "mcp",
    "opendota",
    "dota2",
    "api",
    "server"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cyclonedx/cdxgen": "^11.4.4",
    "@npmcli/arborist": "^9.1.2",
    "@types/axios": "^0.14.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "axios-mock-adapter": "^2.1.0",
    "jest": "^30.0.5",
    "npm-audit-resolver": "^3.0.0-RC.0",
    "snyk": "^1.1298.0",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "typescript": "^5.3.0"
  }
}
